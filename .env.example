# MQTT Configuration (required)
MQTT_HOST=192.168.1.100
MQTT_PORT=1883
MQTT_USER=your_mqtt_user
MQTT_PASSWORD=your_mqtt_password

# MQTT Topic Prefix (optional, default: server)
# Topics will be: {TOPIC_PREFIX}/containers/{name}/status, etc.
TOPIC_PREFIX=server

# Monitoring interval in seconds (optional, default: 300 = 5 minutes)
LOOP_INTERVAL=300

# Timezone (optional, default: America/Los_Angeles)
TZ=America/Los_Angeles

# Glances web UI port (optional, default: 61208)
GLANCES_PORT=61208
